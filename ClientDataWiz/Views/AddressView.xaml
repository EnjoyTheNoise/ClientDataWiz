<UserControl x:Class="ClientDataWiz.Views.AddressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >

    <StackPanel Loaded="ControlLoaded">
        <TextBlock Style="{StaticResource Description}">
            Enter your address.<LineBreak/>
            Only polish addresses are accepted.
        </TextBlock>

        <Label Style="{StaticResource InputLabel}" Content="Address (street with number):"/>
        <TextBox Style="{StaticResource Input}" x:Name="Address" Text="{Binding UserData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Style="{StaticResource InputLabel}" Content="Zip Code and City:"/>
        <StackPanel Orientation="Horizontal">
            <TextBox Style="{StaticResource ZipCodeInput}" x:Name="AddressPostCode" Text="{Binding UserZipCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Style="{StaticResource CityInput}" x:Name="AddressCity" Text="{Binding UserCity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock Style="{StaticResource ErrorTextBlock}" Text="{ Binding ErrorDesc }" Visibility="{ Binding ShowError }"/>

    </StackPanel>
</UserControl>
